{
  "layer": "bottom",
  "position": "top",
  "height": 35,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": [
    "group/g-workspace",
    "group/g-statusbar"
  ],
  "modules-center": [
    "group/g-window"
  ],
  "modules-right": [
    "group/g-datetime",
    "group/g-media",
    "group/g-tray",
    "group/g-control"
  ],
  "group/g-workspace": {
    "orientation": "horizontal",
    "modules": [
      "hyprland/workspaces"
    ]
  },
  "group/g-window": {
    "orientation": "horizontal",
    "modules": [
      "hyprland/window"
    ]
  },
  "group/g-datetime": {
    "orientation": "horizontal",
    "modules": [
      "clock",
      "clock#simpleclock"
    ]
  },
  "group/g-statusbar": {
    "orientation": "horizontal",
    "modules": [
      "cpu",
      "memory",
      "battery",
    ]
  },
  "group/g-media": {
    "orientation": "horizontal",
    "modules": [
      "pulseaudio#output",
      "pulseaudio#input",
    ]
  },
  "group/g-tray": {
    "orientation": "horizontal",
    "modules": [
      "tray"
    ]
  },
  "group/devices": {
    "orientation": "horizontal",
    "modules": [
      "bluetooth"
    ]
  },
  "group/g-control": {
    "orientation": "horizontal",
    "modules": [
      "idle_inhibitor",
      "group/devices",
      "custom/notification",
      "group/g-power"
    ]
  },
  "group/g-power": {
     "orientation": "horizontal",
     "drawer": {
        "transition-duration": 600,
        "children-class": "not-power",
        "transition-left-to-right": false,
     },
     "modules":[
  	"custom/shutdown",
	"custom/lock",
	"custom/logout",
        "custom/reboot"
     ]
  },
  "battery": {
    "interval": 60,
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ],
    "max-length": 25,
  },
  "custom/spotify": {
    "format": "ÔÜº  {}",
    "return-type": "json",
    "on-click": "playerctl play-pause",
    "on-click-right": "spotifatius toggle-liked",
    "on-click-middle": "playerctl spotify next",
    "exec": "spotifatius monitor",
  },
  "mpris": {
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "dynamic-len": 15,
    "status-icons": {
      "paused": "ÔÅå",
    },
    "player-icons": {
      "default": "ÔÅã",
      "mpv": "üéµ",
    },
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{name}",
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false,
  },
  "hyprland/window": {
    "icon": true,
    "icon-size": 16,
    "format": "{title}",
    "max-length": 40
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10,
  },
  "clock#simpleclock": {
    "format": "ÔÄó {:%H:%M}",
    "tooltip-format": "{:%T}"
  },
  "clock": {
    "format": "ÔÅ≥ {:L%Y-%m-%d %a}",
    "calendar": {
      "format": {
        "days": "<span weight='normal'>{}</span>",
        "months": "<span color='#cdd6f4'><b>{}</b></span>",
        "today": "<span color='#f38ba8' weight='700'><u>{}</u></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>",
      },
      "mode": "month",
      "mode-mon-col": 1,
      "on-scroll": 1,
    },
    "tooltip-format": "<span><tt><small>{calendar}</small></tt></span>",
  },
  "cpu": {
    "format": "Ôãõ {usage}%",
    "tooltip": true,
    "interval": 1,
  },
  "memory": {
    "format": "ÓøÖ {used:0.1f}G",
  },
  "pulseaudio#input": {
    "format-source": "ÔÑ∞ {volume}%",
    "format-source-muted": "ÔÑ± off",
    "format": "{format_source}",
    "scroll-step": 1,
    "smooth-scrolling-threshold": 1,
    "max-volume": 100,
    "on-click": "pactl set-source-mute @DEFAULT_SOURCE@ toggle",
    "on-click-middle": "pavucontrol -t 4",
    "on-scroll-up": "pactl set-source-volume @DEFAULT_SOURCE@ +1%",
    "on-scroll-down": "pactl set-source-volume @DEFAULT_SOURCE@ -1%",
  },
  "pulseaudio#output": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶ off",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": [
        "ÔÄ¶",
        "ÔÄß",
        "ÔÄ®"
      ]
    },
    "max-volume": 100,
    "scroll-step": 1,
    "smooth-scrolling-threshold": 1,
    "on-click-middle": "pavucontrol",
    "on-click": "pactl set-sink-mute @DEFAULT_SINK@ toggle"
  },
  "bluetooth": {
    "format": "Û∞ÇØ",
    "format-disable": "Û∞Ç≤",
    "format-connected": "Û∞Ç±",
    "format-connected-battery": "Û∞•â",
    // "format-device-preference": [ "device1", "device2" ], // preference list deciding the displayed device
    "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
    "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
    "tooltip-format-enumerate-connected": "{device_alias}\t{device_address}",
    "tooltip-format-enumerate-connected-battery": "{device_alias}\t{device_address}\t{device_battery_percentage}%",
    "on-click": "blueman-manager",
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
    }
  },
  "custom/sep": {
    "format": "|",
    "tooltip": false,
  },
  "custom/shutdown": {
    "tooltip-format": "Power off",
    "on-click": "${XDG_CONFIG_HOME:-$HOME/.config}/waybar/fuzzel-confirm.sh 'Shutdown?' 'shutdown now'",
    "format": "‚èª",
  },
  "custom/reboot": {
    "tooltip-format": "Reboot",
    "on-click": "${XDG_CONFIG_HOME:-$HOME/.config}/waybar/fuzzel-confirm.sh 'Reboot?' 'reboot'",
    "format": "Û∞úâ",
  },
  "custom/logout": {
    "tooltip-format": "Logout",
    "on-click": "${XDG_CONFIG_HOME:-$HOME/.config}/waybar/fuzzel-confirm.sh 'Logout?' 'uwsm stop'",
    "format": "Û∞óº",
  },
  "custom/lock": {
    "tooltip-format": "Lock screen",
    "on-click": "loginctl lock-session",
    "format": "Û∞çÅ",
  },
  "custom/notification": {
    "escape": true,
    "exec": "swaync-client -swb",
    "exec-if": "which swaync-client",
    "format": "{icon}",
    "format-icons": {
      "none": "Û∞Ö∫",
      "notification": "Û∞°ü",
    },
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "return-type": "json",
    "tooltip": false
  }
}
